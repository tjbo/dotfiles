{
  "title": "Right Option -> Fn",
  "rules": [
    {
      "description": "Right_Option + Return -> Enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "keypad_enter"}]
        }
      ]
    },
    {
      "description": "Right_Option + Delete -> Forward_Delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "delete_or_backspace",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "delete_forward"}]
        }
      ]
    },
    {
      "description": "Right_Option + Up/Down/Left/Right -> PageUp/PageDown/Home/End",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "up_arrow",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "page_up"}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "down_arrow",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "page_down"}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "left_arrow",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "home"}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_arrow",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "end"}]
        }
      ]
    },
    {
      "description": "Right_Option + [/]/\\ -> Clear/Esc/Tab/",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "keypad_num_lock"}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "escape"}]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "backslash",
            "modifiers": {
              "mandatory": ["right_option"],
              "optional": ["caps_lock"]
            }
          },
          "to": [{"key_code": "tab"}]
        }
      ]
    }
  ]
}
